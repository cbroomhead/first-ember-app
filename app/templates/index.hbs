<h1 class="title">Generation Mix App</h1>

<div class="row">
   <div class=col-md-3></div>
   <div class=col-md-6>
      <div id="instructions" class="alert alert-warning center center">
         <strong>Please wait while we are getting your location</strong> 
      </div>
   </div>
</div>



   <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" {{action 'handleClick'}}>SUBMIT</button>
   </div>

<div class="row">
   <div class=col-md-1></div>
   <div class=col-md-10>
      {{#if errormsg}}
         <div class="alert alert-danger">{{errormsg}}</div>
      {{/if}}
   </div>
</div>
<br/><br/>

<div class="row">
   <div class=col-md-1></div>
   <div class=col-md-10>
      {{#if msg}}
      	<div class="alert alert-success">{{msg}}</div>
      {{/if}}
   </div>
</div>
<br/><br/> 

