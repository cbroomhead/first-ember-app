<h1 id='banner'>App</h1>

<div class="row">
   <div class=col-md-3></div>
   <div class=col-md-6>
         <strong id='title'>Press Submit to launch the app.</strong> 
   </div>
</div>



   <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" {{action 'handleClick'}}>SUBMIT</button>
   </div>



<div class="row">
   <div class=col-md-1></div>
   <div class=col-md-10>
      {{#if msg}}
      	<div class="alert alert-success">{{msg}}</div>
      {{/if}}
   </div>
</div>
<br/><br/> 


{{#if piecharts}}
<div class="chart-container" data-template-name="whales">
   {{high-charts mode=mode chartOptions=chartOptions content=model theme=theme}}
</div>
{{/if}}

<br/><br/> 

<div class="row">
   <div class=col-md-1></div>
   <div class=col-md-10>
      {{#if errormsg}}
         <div class="alert alert-danger bigger">{{errormsg}}</div>
      {{/if}}
   </div>
</div>





<br/><br/>

